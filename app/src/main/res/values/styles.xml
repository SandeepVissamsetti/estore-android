<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.TextView.Title" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.TextView.SubTitle" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">20sp</item>
        <item name="android:textColor">@color/charcoal</item>
    </style>

    <style name="Base.TextView.CTAText" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Toolbar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>
</resources>